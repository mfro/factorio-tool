{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "strict": true,

        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        "outDir": "out",
        "sourceMap": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "./src/**/*.ts",
        "../common/**/*.ts",
    ],
    "exclude": [
        "./src/web"
    ]
}
